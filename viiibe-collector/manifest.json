{
    "manifest_version": 3,
    "name": "Moood! Collector",
    "version": "2.0.0",
    "description": "Save designs from Pinterest, Behance, Dribbble to your personal Moood! library",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "*://*.pinterest.com/*",
        "*://*.pinterest.cl/*",
        "*://*.behance.net/*",
        "*://*.dribbble.com/*",
        "https://*.vercel.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.pinterest.com/*",
                "*://*.pinterest.cl/*",
                "*://*.behance.net/*",
                "*://*.dribbble.com/*"
            ],
            "js": [
                "platform-extractors.js",
                "content.js",
                "batch-processing.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup-v2.html"
    }
}